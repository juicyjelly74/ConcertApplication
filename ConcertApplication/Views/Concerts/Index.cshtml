@model IEnumerable<ConcertApplication.Models.Concert>

@{
    ViewData["Title"] = "Index";
}
<div id="concerts">
    <h2>All concerts</h2>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Performer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TicketsAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TicketsLeft)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Place)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Performer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TicketsAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TicketsLeft)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Place)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div id="concert_map_app">
    <concert-map></concert-map>
</div>

<template id="concert_map_template">
    <div id="concert-map" style="width:1100px;height:500px;">
    </div>
</template>

<script src="~/js/vue_map.js" asp-append-version="true"></script>
