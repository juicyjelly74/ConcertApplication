@model ConcertApplication.Models.Concert

@{
    ViewData["Title"] = "Details";
}

@if (@ViewBag.Message != null)
{
    <header>
        <h2 class="text-info">Ticket booking</h2>
        <h3><p class="text-danger border-message">@ViewBag.Message</p></h3>
    </header>
}
else
{
    <h2>Detailed information</h2>
}
<div>
    <h4>Concert</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Performer)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Performer)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TicketsAmount)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TicketsAmount)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TicketsLeft)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TicketsLeft)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Place)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Place)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
        @if (Model.Type == nameof(ClassicConcert))
        {
            @await Html.PartialAsync("DetailsPartials/_ClassicalDetailsPartial")
        }
        @if (Model.Type == nameof(OpenAir))
        {
            @await Html.PartialAsync("DetailsPartials/_OpenAirDetailsPartial")
        }
        @if (Model.Type == nameof(Party))
        {
            @await Html.PartialAsync("DetailsPartials/_PartyDetailsPartial")
        }
    </dl>

    <div class="row">
        <div class="col-md-3">
            <form asp-action="Details">
                <div class="form-group">
                    <label class="control-label">Enter tickets amount:</label>
                    <input id="amount" name="amount" type="number" class="form-control" min="1" required/>
                </div>
                <div class="form-group">
                    <input asp-action="BookTicket" type="submit" value="Book Tickets" class="btn btn-default" asp-route-id="@Model.Id" />
                </div>
                </form>
        </div>
    </div>
    <br />
    <a asp-action="Index">Back to Concerts list</a>
</div>
