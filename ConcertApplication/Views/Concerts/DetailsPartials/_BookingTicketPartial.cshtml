@model ConcertApplication.Models.ConcertViewModel
@{
    ViewData["Title"] = "BookingTicketPartial";
}

<h3>Ticket booking</h3>

<div class="row">
    <div class="col-md-3">
        <form asp-controller="Concerts" asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Enter tickets amount:</label>
                <input id="amount" name="amount" asp-for="BookingTicketAmount" class="form-control" min="1" max="2147483647" required />
                <span asp-validation-for="BookingTicketAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-action="BookTicket" type="submit" value="Book Tickets" class="btn btn-default" asp-route-id="@Model.Id" />
            </div>
        </form>
    </div>
</div>