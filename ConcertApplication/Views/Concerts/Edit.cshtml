@model ConcertApplication.Models.ConcertViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Court</h4>
<hr />
<div id="edit_concert_app">
    <div id="#typeDiv" data-value="@Model.Type" hidden></div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Performer" class="control-label"></label>
                    <input asp-for="Performer" class="form-control" />
                    <span asp-validation-for="Performer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TicketsAmount" class="control-label"></label>
                    <input asp-for="TicketsAmount" min="0" class="form-control" />
                    <span asp-validation-for="TicketsAmount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TicketsLeft" class="control-label"></label>
                    <input asp-for="TicketsLeft" min="0" class="form-control" />
                    <span asp-validation-for="TicketsLeft" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConcertDate" class="control-label"></label>
                    <input asp-for="ConcertDate" class="form-control" />
                    <span asp-validation-for="ConcertDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Place" class="control-label"></label>
                    <input asp-for="Place" class="form-control" />
                    <span asp-validation-for="Place" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" min="0" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <select id="select_type" asp-for="Type" class="form-control" v-model="type">
                        <option disabled>Select type</option>
                        <option value="ClassicalConcertModel">Classical Concert</option>
                        <option value="OpenAirModel">Open Air</option>
                        <option value="PartyModel">Party</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div>
                    <div id="classical_part" v-show="type == 'ClassicalConcertModel'" class="form-group">
                        @Html.Partial("AddPartials/_ClassicalPartial", Model)
                    </div>
                    <div id="open_air_part" v-show="type == 'OpenAirModel'" class="form-group">
                        @Html.Partial("AddPartials/_OpenAirPartial", Model)
                    </div>
                    <div id="party_part" v-show="type == 'PartyModel'" class="form-group">
                        @Html.Partial("AddPartials/_PartyPartial", Model)
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        @Html.ActionLink("Back to List", "Index", new { page = ViewBag.Page })
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/js/vue_edit.js" asp-append-version="true"></script>